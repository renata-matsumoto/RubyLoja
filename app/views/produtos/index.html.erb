<% if flash[:notice] %>
   <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
   </div>
<% end %>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <td>Nome</td>
      <td>Descrição</td>
      <td>Departamento</td>
      <td>Preço</td>
      <td>Quantidade</td>
      <td colspan="2">
    </tr>
  </thead>
  <tbody>
    <%= render @produto %>
  </tbody>
</table>
