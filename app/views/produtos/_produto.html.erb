<tr>
  <td><%= produto.nome %></td>
  <td><%= produto.descricao %></td>
  <td><%= produto.departamento.nome %></td>
  <td><%= produto.preco %></td>
  <td><%= produto.quantidade %></td>
  <td><%= link_to "Alterar", edit_produto_path(produto), method: :edit, class:"btn btn-default" %></td>
  <td><%= link_to "Remover", produto, method: :delete, class:"btn btn-danger",
  data: {confirm: "Tem certeza que deseja remover #{produto.nome} da lista ?"} %></td>
</tr>